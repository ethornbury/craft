<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(@product, html: { class: "form-horizontal", role: "form" }) do |f| %>
      <% if @product.errors.any? %>
        <div class="alert alert-danger alert-dismissable" role="alert">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>
    
          <ul>
          <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="form-group">
        <%= f.label "Product name" %>
          <%= f.text_field :productname, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label "Description" %><i> (255 characters max)</i>
          <%= f.text_field :desc, class: "form-control" %>
      </div>
      
      <div class="form-group">
          <%= f.submit class: "btn btn-custom" %>
      </div>
    <% end %>
  </div>
</div>
