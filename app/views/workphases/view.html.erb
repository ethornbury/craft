<% provide(:title, 'View CraftWork') %>

  <div class="page-header">
    <%= link_to work_all_path, class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Back
    <% end %>
    <h1>CraftWork</h1>
  </div>
