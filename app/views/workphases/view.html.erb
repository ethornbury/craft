  <%#= render 'workphases/phase' %>
  
  
<p>Click on the total values to edit them.</p>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Product</th>
        <th>Phase</th>
        <th>Total</th>
        <th>Employee</th>
        <th>Comments</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @workphases) do |workphase| %>
        <td><%= workphase.product.productname %>: <%= workphase.product_id %></td>
        <td><%= workphase.phase.phasename %>: <%= workphase.phase_id %></td>
        <td><%= best_in_place workphase, :total %></td>
        <td><%= workphase.employee.firstname %> <%= workphase.employee.lastname %>: <%= workphase.employee_id %></td>
        <td><%= workphase.worknote %></td>
      <% end %>
    </tbody>
  </table>
</div>