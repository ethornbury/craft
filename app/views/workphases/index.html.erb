<% provide(:title, 'Phase Index') %>

<div class="page-header">
  <%= link_to new_workphase_path, class: 'btn btn-custom' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Workphase
  <% end %>
  <h1>Workphase Index</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Product Id</th>
            <th>Phase Id</th>
            <th>Total</th>
            <th>Date Last Changed</th>
            <th>Employee Id</th>
            <th>Worknote</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @workphases) do |workphase| %>
        <td><%= workphase.product %></td>
        <td><%= workphase.phase %></td>
        <td><%= workphase.total %></td>
        <td><%= workphase.dateChanged %></td>
        <td><%= workphase.employee %></td>
        <td><%= workphase.worknote %></td>
        <td><%= link_to 'Show',     workphase %></td>
        <td><%= link_to 'Edit',     edit_workphase_path(workphase) %></td>
        <td><%= link_to 'Destroy',  workphase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
