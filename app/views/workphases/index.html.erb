<% provide(:title, 'Workphase List') %>

<div class="page-header">
  <%= link_to new_workphase_path, class: 'btn btn-custom' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Workphase
  <% end %>
  <h1>Workphase List</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Product</th>
            <th>Phase</th>
            <th>Total</th>
            <th>Date Last Changed</th>
            <th>Employee</th>
            <th>Worknote</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @workphases) do |workphase| %>
        <td><%= workphase.product.productname %>: <%= workphase.product_id %></td>
        <td><%= workphase.phase.phasename %>: <%= workphase.phase_id %></td>
        <td><%= workphase.total %></td>
        <td><%= workphase.dateChanged.strftime("%d-%m-%Y") %></td>
        <td><%= workphase.employee.firstname %> <%= workphase.employee.lastname %>: <%= workphase.employee_id %></td>
        <td><%= workphase.worknote %></td>
        <td><%= link_to 'Show',     workphase %></td>
        <td><%= link_to 'Edit',     edit_workphase_path(workphase) %></td>
        <td><%= link_to 'Destroy',  workphase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<h4>Export Workphases Data</h4>
 <%= link_to "Download CSV file", workphases_path(format: "csv"), class: 'btn btn-custom' %><br><br>
