<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(@workphase, html: { class: "form-horizontal", role: "form" }) do |f| %>
      <% if @workphase.errors.any? %>
        <div class="alert alert-danger alert-dismissable" role="alert">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4><%= pluralize(@workphase.errors.count, "error") %> prohibited this workphase from being saved:</h4>
    
          <ul>
          <% @workphase.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= f.label :product %>
          <%= f.text_field :product, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :phase %>
          <%= f.text_field :phase, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label 'Total to be made' %>
          <%= f.number_field :total, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label 'Date Changed' %>
          <%= f.date_field :dateChanged, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :employee %>
          <%#= f.text_field :employee, class: "form-control" %>
           <%= collection_select(:workphase, :employee_id, Employee.all, :id, :fullname, {:mulitple => false}, {class: "form-control"}) %>
      </div>
      
      <div class="form-group">
        <%= f.label 'Worknote' %>
          <%= f.text_field :worknote, class: "form-control" %>
      </div>
      
      <div class="form-group">
          <%= f.submit class: "btn btn-custom" %>
      </div>
    <% end %>
  </div>
</div>