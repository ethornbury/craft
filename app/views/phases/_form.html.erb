<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(@phase, html: { class: "form-horizontal", role: "form" }) do |f| %>
      <% if @phase.errors.any? %>
        <div class="alert alert-danger alert-dismissable" role="alert">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4><%= pluralize(@phase.errors.count, "error") %> prohibited this phase from being saved:</h4>
    
          <ul>
          <% @phase.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="form-group">
        <%= f.label 'Phase Name' %>
          <%= f.text_field :phasename, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label 'Note' %>
          <%= f.text_field :note, class: "form-control" %>
      </div>
      
      <div class="form-group">
          <%= f.submit class: "btn btn-custom" %>
      </div>
    <% end %>
  </div>
</div>
